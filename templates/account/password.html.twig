{% extends 'base.html.twig' %}

{% block title %}Modification de mot de passe
{% endblock %}

{% block body %}
    <div class="container clearfix">
        <div class="row">
            <div class="col">
                <div class="bg-light py-3 px-3 clearfix">
                    <h1 class="my-4">Modification de mot de passe !</h1>

                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-success float-right my-3">
                        <i class="fas fa-save"></i>Modifiez le mot de passe</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}