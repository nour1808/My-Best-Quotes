{% extends 'base.html.twig' %}
{% block title %}REGISTER ON OUR SITE!
{% endblock %}
{% block body %}
<div class="container" style="margin:0 auto;">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <header class="card-header">
                        <a href="{{ path('account_login') }} " class="float-right btn btn-outline-primary mt-1">Log in</a>
                        <h4 class="card-title mt-2">Sign up</h4>
                    </header>
                    <article class="card-body">
    
                        <div class="form-row">
                            <div class="col form-group">
                                {{ form_start(form) }} {{ form_row(form.firstName) }}
    
                            </div>
                            <!-- form-group end.// -->
                            <div class="col form-group">
                                {{ form_row(form.lastName) }}
                            </div>
                            <!-- form-group end.// -->
                        </div>
                        <!-- form-row end.// -->
                        <div class="form-group">
                            {{ form_row(form.aemail) }}
                            <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <!-- form-group end.// -->
                        <div class="form-group">
                            {{ form_row(form.gender) }}
                        </div>
                        <!-- form-group end.// -->
                        <div class="form-group">
                            {{ form_row(form.picture) }}
                        </div>
                        <!-- form-group end.// -->
    
                        <!-- form-row.// -->
                        <div class="form-group">
                            <label>Create password</label>
                            {{ form_row(form.hash) }} {{ form_row(form.passwordConfirm) }}
                        </div>
                        <!-- form-group end.// -->
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Register </button>
                        </div>
                        <!-- form-group// -->
    
                    </article>
                    <!-- card-body end .// -->
                    {{ form_end(form) }}
                    <div class="border-top card-body text-center">Have an account?
                        <a href="{{ path('account_index') }}">Log In</a></div>
                </div>
                <!-- card.// -->
            </div>
            <!-- col.//-->
    
        </div>
        <!-- row.//-->
    
    </div>


                        
{% endblock %}
            

                