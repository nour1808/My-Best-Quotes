{% extends 'base.html.twig' %}
{% block title %}Profile of
    {{ user.fullName }}!
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row align-items-center mb-6">
            <div class="col-3 mb-3 text-center">
                <img src="{{ vich_uploader_asset(user, 'pictureFile') }}" class="avatar mb-3" alt="Avatar de {{user.fullName}} " /><br>
                <button class="btn btn-primary" type="button">
                    <span class="badge badge-light">{{ user.quotes| length }}</span>
                    Quotes
                </button>
            </div>
            <div class="col-9 mb-3">
                <h1>
                    {{user.fullName}}</h1>
                <br>

            </div>
            <hr></div>
        <div class="card mt-3">
            <div class="card-body">
                <h2 class="text-center my-6 mb-3">The quotes loved by :
                    <b>
                        {{user.fullName}}</b>
                </h2>
            </div>
        </div>

        {% if user.quotes | length > 0 %}
            <div class="row">
                {% for quote in pagination|sort|reverse %}
                    {% include "quote/_quote.html.twig" %}
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning my-5">
                <p>
                    <b>
                        {{user.fullName}}</b>
                    does not have quotes on the site yet.
                </p>
            </div>
        {% endif %}

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}