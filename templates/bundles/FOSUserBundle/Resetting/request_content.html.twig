{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="bg-light py-4 px-4">
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                    <h3>Forgot your password</h3>
                    <div class="form-group">
                        <label for="username">Enter your email please :</label>
                        <input class="form-control" id="username" name="username" placeholder="Enter your email" required="required" type="text"/>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="{{ 'resetting.request.submit'|trans }}"/>
                        <br/>
                    </div>
                </form>
            </div>
            <br/>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>